@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<div class="modal__background">
    <h2 class="auth-form__title">Авторизация</h2>
    <div class="modal__window">

        <form asp-action="Authorization" asp-controller="Users" class="auth-form" name="form-auth" method="post">

            
            <label class="auth-form__label">
                <span class="auth-form__placeholder">email</span>
                <input class="auth-form__input input-email" type="email" name="Email" autocomplete="off" required  value="test111@mail.ru">
            </label>

            <label class="auth-form__label">
                <span class="auth-form__placeholder">пароль</span>
                <input class="auth-form__input input-password" type="password" name="HashPass" autocomlete="off" required value="111">
                <div class="auth-form__toggler">
                    <i class="la la-eye auth-form__icon"></i>
                    <input type="checkbox" class="auth-form__checkbox password-toggler">
                </div>
            </label>

            @if (ViewBag.error != null){
                <div class="auth-form__answer">
                    <span class="text-danger">@ViewBag.error</span>
                </div>
            }

            <input class="auth-form__submit" type="submit" value="Войти">

            <div class="auth-form__bottom">
                <span>У вас еще нет аккаунта?</span>
                <a href="/Users/Registration">Создать новый</a>
            </div>
        </form>
    </div>
</div>

<div class="hint"></div>
